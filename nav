<?php
$page = $_GET['page'] ?? 'home';

$menu = [
    'home' => 'home',
    'about-us' => 'About us',
    'services' => 'Services',
    'contact' => 'Contact'
];
?>

<nav>
    <ul>
        <?php foreach ($menu as $key => $label): ?>
            <li>
                <a href="?page=<?= $key ?>" <?= $page === $key ? 'class="active"' : '' ?>>
                    <?= $label ?>
                </a>
            </li>
        <?php endforeach; ?>
    </ul>
</nav>

<style>
    nav ul {
        list-style: none;
        display: flex;
        gap: 15px;
    }
    nav a {
        text-decoration: none;
        color: black;
    }
    nav a.active {
        font-weight: bold;
        color: red;
    }
</style>

