<?php


//first I determine the characters I want to get away 
$char = ['_', '~', '-'];

//will ensure the deletion of the ending with the FINISH HIM function!
function finish_him($file) {
    return substr($file, 0, strpos($file, "."));
};


echo "excel files";
echo '<br>';

//use glob to determine which files I want to extract
$files1 = glob('*.{XLS,xlsx}', GLOB_BRACE);
foreach($files1 as $file_xls) {
    $file_trim = str_replace($char, ' ',finish_him($file_xls));

    echo "<a href='$file_xls'>" . $file_trim . "</a>";
    echo '<br>';
}
echo '<br>';

echo "pdf files";
echo '<br>';

$files2 = glob('*.{pdf}', GLOB_BRACE);
foreach($files2 as $file_pdf) {
    $file_trim = str_replace($char, ' ',finish_him($file_pdf));
    echo "<a href='$file_pdf'>" . $file_trim . "</a>";
    echo '<br>';
}
echo '<br>';

echo "word files";
echo '<br>';

$files3 = glob('*.{doc,docx}', GLOB_BRACE);
foreach($files3 as $file_doc) {
    $file_trim = str_replace($char, ' ',finish_him($file_doc));
    echo "<a href='$file_doc'>" . $file_trim . "</a>";
    echo '<br>';
}

?>
